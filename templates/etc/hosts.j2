# /etc/hosts
# {{ ansible_managed }}

# The following lines are desirable for IPv6 capable hosts
::1              ip6-localhost ip6-loopback
fe00::0          ip6-localnet
ff00::0          ip6-mcastprefix
ff02::1          ip6-allnodes
ff02::2          ip6-allrouters

# Localhost
127.0.0.1        localhost
127.0.0.1        {{ wsl_config_win_hostname }}
127.0.1.1        {{ wsl_config_win_hostname }}.localdomain  {{ wsl_config_win_hostname }}
127.0.1.1        {{ wsl_config_win_hostname }}.mshome.net   {{ wsl_config_win_hostname }}

# Additional hosts
{% for host_entry in wsl_config_hosts | default([]) %}
{{ host_entry["addr"].ljust(15) }}  {{ host_entry["fqdn"] | default(host_entry["short"]) }} {{ host_entry["short"] }}
{% endfor %}
